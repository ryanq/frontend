<script>
  /// Set up buttons that have an 'aria-expanded' attribute.
  ///
  /// Default the 'aria-expanded' attribute to 'false' and add an event listener to toggle between
  /// 'false' and 'true' on a click event.
  
  let buttons = document.querySelectorAll('button[aria-expanded]')

  buttons.forEach((button) => {
    button.ariaExpanded = 'false'
    button.addEventListener('click', () => {
      button.ariaExpanded = button.ariaExpanded === 'false' ? 'true' : 'false'
    })
  })
</script>

<script>
  /// Reset toggle buttons when crossing the width where the transition between menu styles happens.

  let query = window.matchMedia('(width < 64rem)')
  query.addEventListener('change', (event) => {
    let menu = document.querySelector('button[aria-expanded][aria-owns="menu-drawer"]')
    let more = document.querySelector('button[aria-expanded][aria-owns="more-menu"]')

    if (menu !== null) {
      menu.ariaExpanded = 'false'
    }

    if (more !== null) {
      more.ariaExpanded = 'false'
    }
  })
</script>

